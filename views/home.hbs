
    {{>user-header}}

    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="hero__slider owl-carousel">
            {{#each banners}}
            <div class="hero__items set-bg" data-setbg="/bannerImages/{{image}}">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6>{{mainTitle1}}</h6>
                                <h2>{{mainTitle2}}</h2>
                                <p>{{description}}</p>
                                <a href="/shop" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
            
    </section>
    <!-- Hero Section End -->

    <!-- Banner Section Begin -->
    <section class="banner spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 offset-lg-4">
                    <div class="banner__item">
                        {{#each Banner_1}}
                        <div class="banner__item__pic">
                            <img src="/bannerImages/{{image}}" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>{{mainTitle1}}</h2>
                            <a href="/shop">Shop now</a>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col-lg-5">
                    {{#each Banner_2}}
                    <div class="banner__item banner__item--middle">
                        <div class="banner__item__pic">
                            <img src="/bannerImages/{{image}}" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>{{mainTitle1}}</h2>
                            <a href="/shop">Shop now</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="col-lg-7">
                    {{#each Banner_3}}
                    <div class="banner__item banner__item--last">
                        <div class="banner__item__pic">
                            <img src="/bannerImages/{{image}}" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>{{mainTitle1}}</h2>
                            <a href="/shop">Shop now</a>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        {{!-- <li class="active" data-filter="*">Best Sellers</li> --}}
                        <li data-filter=".new-arrivals">New Arrivals</li>
                        {{!-- <li data-filter=".hot-sales">Hot Sales</li> --}}
                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                {{#each latestProducts}}
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
                    <div class="product__item">
                        <div  style="height: 28rem;" class="product__item__pic set-bg" data-setbg="/productImages/{{image.[0]}}">
                            <span class="label">New</span>
                            <ul class="product__hover">
                                <li><a href="/add-to-wishlist/{{productid}}"><img src="img/icon/heart.png" alt=""></a></li>
                                <li><a href="#"><img src="img/icon/compare.png" alt=""> <span>Compare</span></a></li>
                                <li><a href="/product-details/{{_id}}"><img src="img/icon/search.png" alt=""></a></li>
                            </ul>
                        </div>
                        <div class="product__item__text">
                            <h6>{{title}}</h6>
                            <a href="#" class="add-cart">+ Add To Cart</a>
                            {{!-- <div class="rating">
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                                <i class="fa fa-star-o"></i>
                            </div> --}}
                            <h5>â‚¹{{price}}</h5>
                            <div class="product__color__select">
                                <label for="pc-1">
                                    <input type="radio" id="pc-1">
                                </label>
                                <label class="active black" for="pc-2">
                                    <input type="radio" id="pc-2">
                                </label>
                                <label class="grey" for="pc-3">
                                    <input type="radio" id="pc-3">
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                
                
                
                
            </div>
        </div>
    </section>
    <!-- Product Section End -->

   

   

 
