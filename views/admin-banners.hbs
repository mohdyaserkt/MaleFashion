{{>admin-header}}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Add a New Banners</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form action="/admin/add-new-banner" enctype="multipart/form-data" method="post">


                            <div class="row" style="margin-top: 3%;">
                                <div class="col">
                                    <input name="mainTitle1" type="text" class="form-control"
                                        placeholder="Main Title 1">
                                </div>

                                <div class="col">
                                    <input name="mainTitle2" type="text" class="form-control"
                                        placeholder="Main Title 2">
                                </div>
                            </div>


                            <div class="row" style="margin-top: 3%;">
                                <div class="col">
                                    <input name="description" type="text" class="form-control"
                                        placeholder="Description">
                                </div>


                            </div>


                            <div class="form-group" style="margin-bottom: 2%;">
                                <div class="form-row">

                                    <div class="col">
                                        <label for="exampleInputPlaceholder">Images</label>
                                        <input type="file" name="image" id="image" class="form-control" required>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style="margin-bottom: 2%;">
                                <div class="form-row">
                                    <div class="col">
                                        <label for="exampleInputPlaceholder">Banner Type</label>
                                        <select name="bannerType" class="form-select" aria-label="Default select example">
                                            <option selected>Open this select menu</option>
                                            
                                            <option>Hero_Section</option>
                                            <option>Banner_1</option>
                                            <option>Banner_2</option>
                                            <option>Banner_3</option>
                                            <option>Deal_Of_the_Week</option>

                                            
                                        </select>
                                    </div>
                                    <div class="col">
                                        
                                    </div>
                                </div>
                            </div>


                            <div style="margin-top: 3%;">
                                <button type="reset" class="btn btn-outline-primary mr-2">Cancel</button>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                        <p class="text-danger" style="font-size: 13px;margin-top: 10px;"></p>

                    </div>
                </div>


                <table class="table">
                    <div class="header-title">
                        <h4 class="card-title">Ongoing Banners</h4>
                    </div>
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Images</th>
                            <th scope="col">Main Title 1</th>
                            <th scope="col">Main Title 2</th>
                            
                            <th scope="col">status</th>
                            <th scope="col"></th>
                            {{!-- <th scope="col"></th> --}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each banners}}
                        <tr>
                            <th scope="row">{{inc @index}}</th>
                            <td><img width="50px" height="50px" src="/bannerImages/{{image}}" alt=""></td>
                            <td>{{mainTitle1}}</td>
                            <td>{{mainTitle2}}</td>

                            <td>{{status}}</td>

                            <td>{{#if status}}
                                <a href="/admin/disable-banner/?bannerId={{bannerId}}&status=false"><button
                                        class="btn btn-dark">Disable</button></a>
                                {{else}}
                                <a href="/admin/disable-banner/?bannerId={{bannerId}}&status=true"><button
                                        class="btn btn-dark">Enable</button></a>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
</div>
<!-- Wrapper End-->


{{>admin-footer}}