{{>admin-header}}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <form method="post" enctype="multipart/form-data" role="form" name="sub"
                    onsubmit="return  validateform()" action="/admin/add-items">
                    <div class="form-group" style="margin-bottom: 2%;">
                        <div class="form-row">
                            <div class="col">
                                <label for="exampleInputPlaceholder">Title</label>
                                <input type="text" id="title" name="title" class="form-control">
                            </div>
                            <div class="col">
                                <label for="exampleInputPlaceholder">Price</label>
                                <input type="text" id="price" name="price" class="form-control">
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 2%;">
                        <div class="form-row">
                            <div class="col">
                                <label for="exampleInputPlaceholder">Category</label>
                                <select name="category" class="form-select" aria-label="Default select example">
                                    <option selected>Open this select menu</option>
                                    {{#each productDetails}}
                                    <option>{{categoryname}}</option>

                                    {{/each}}
                                </select>
                            </div>
                            <div class="col">
                                <label for="exampleInputPlaceholder">Stock</label>
                                <input type="text" name="stock" id="stock" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 2%;">
                        <div class="form-row">
                            <div class="col">
                                <label for="exampleInputPlaceholder">Brand</label>
                                <input type="text" name="brand" id="brand" class="form-control" required>
                            </div>
                            <div class="col">
                                <label for="exampleInputPlaceholder">Sub category</label>
                                <input type="text" name="subcategory" id="subcategory" class="form-control" required>
                            </div>
                        </div>
                    </div>


                    <div class="form-group" style="margin-bottom: 2%;">
                        <div class="form-row">
                            <div class="col">
                                <label for="">Select Colours</label>
                                <select name="colour" id="multiple" class="js-states form-control" multiple>
                                    <option>Red</option>
                                    <option>Green</option>
                                    <option>Blue</option>
                                    <option>Yellow</option>
                                </select>
                            </div>
                            <div class="col">
                                <label for="">Select Size</label>
                                <select name="size" id="multiple" class="js-states form-control" multiple>
                                    <option>XXL</option>
                                    <option>XL</option>
                                    <option>L</option>
                                    <option>M</option>
                                    <option>S</option>
                                </select>
                            </div>
                        </div>
                    </div>



                    <div class="form-group" style="margin-bottom: 2%;">
                        <div class="form-row">

                            <div class="col">
                                <label for="exampleInputPlaceholder">Images</label>
                                <input multiple type="file" name="image" id="image" class="form-control" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group" style="margin-bottom: 2%;">
                        <div class="form-row">

                            <div class="col">
                                <label for="exampleInputPlaceholder">Description</label>
                                <input type="text" name="description" id="description" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group" style="margin-bottom: 2%;">
                        <div class="form-row">

                            <div class="col">
                                <label for="exampleInputPlaceholder">Product Information</label>
                                <input type="text" name="productInformation" id="productInformation" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="checkbox mb-3">
                        <label><input type="checkbox"> Remember me</label>
                    </div>
                    <p class="text-danger" id="error-message"></p>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="submit" class="btn bg-danger">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Wrapper End-->
{{>admin-footer}}