
{{>admin-header}}
      <div class="content-page">
      <div class="container-fluid">
         <div class="row">
            <div class="col-sm-12">
               <div class="card">
                  <div class="card-header d-flex justify-content-between">
                     <div class="header-title">
                        <h4 class="card-title">Users Details</h4>
                     </div>
                  <div class="header-action">
                           
                        </div>
                  </div>
                  <div class="card-body">
                     <div class="collapse" id="datatable-1">
                           <div class="card"><kbd class="bg-dark"><pre id="bootstrap-datatables" class="text-white"><code>

       
         
</code></pre></kbd></div>
                        </div>
                     {{!-- <p>Images in Bootstrap are made responsive with <code>.img-fluid</code>. <code>max-width: 100%;</code> and <code>height: auto;</code> are applied to the image so that it scales with the parent element.</p> --}}
                     <div class="table-responsive">
                        <table id="datatable-1" class="table data-table table-striped table-bordered" >
                           <thead>
                              <tr>
                                 <th>Image</th>
                                 <th>Title</th>
                                 <th>Price</th>
                                 <th>Category</th>
                                 <th>Stock</th>
                                 <th>Brand</th>
                                 <th>Sub Category</th>
                                 <th>Product Id</th>
                                 <th>Description</th>
                                 <th class="text-right">Action</th>
                              </tr>
                           </thead>
                           <tbody>
                             {{#each allProducts}}
                              <tr>
                                 <td ><img style="width: 50px;height: 50px;" src="/productImages/{{image.[0]}}"></td>
                                 <td>{{title}}</td>
                                 <td>{{price}}</td>
                                 <td>{{category}}</td>
                                 <td>{{stock}}</td>
                                 <td>{{brand}}</td>
                                 <td>{{subcategory}}</td>
                                 <td>{{productid}}</td>
                                 <td>{{description}}</td>
                                 <td class="text-right">
                                    {{#if status}}
                                 <a href="/admin/delete-products/?_id={{_id}}&status=false"><button type="button" class="btn-sm btn-dark  active mt-2">Disable</button></a>
                                 {{else}}
                                 <a href="/admin/delete-products/?_id={{_id}}&status=true"><button type="button" class="btn-sm btn-dark  active mt-2">Enable</button></a>
                                 {{/if}}
                                 <a href="/admin/edit-products/{{_id}}"><button type="button" class="btn-sm btn-dark active mt-2">edit_</button></a></td>
                             </tr>
                              {{/each}} 
                              
                           </tbody>
                           <tfoot>
                              <tr>
                                 <th>Image</th>
                                 <th>Title</th>
                                 <th>Price</th>
                                 <th>Category</th>
                                 <th>Stock</th>
                                 <th>Brand</th>
                                 <th>Sub Category</th>
                                 <th>Product Id</th>
                                 <th>Description</th>
                                 <th class="text-right">Action</th>
                              </tr>
                           </tfoot>
                        </table>
               

            
         </div>
      </div>
      </div>
    </div>
    <!-- Wrapper End-->
   